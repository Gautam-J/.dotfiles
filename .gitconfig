[user]
	name = Gautam J
	email = gautam.jayapal@gmail.com
[init]
	defaultBranch = main
[alias]
	glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ci = commit
	br = branch
	st = status
	last = log -1 HEAD
	co = checkout
[core]
	editor = nvim
	excludesfile = ~/.gitignore
[pull]
	rebase = false
